{
  "$schema": "https://hifibridge.com/docs.json",
  "theme": "almond",
  "name": "HIFI Docs",
  "description": "Developer Documentation for HIFI",
  "colors": {
    "primary": "#33171E",
    "light": "#F2FF66",
    "dark": "#191314"
  },
  "fonts": {
    "family": "Rhithmic Sans",
    "source": "http://dashboard.hifi.com/fonts/rhithmic/RhithmicSans-Regular.woff2",
    "format": "woff2",
    "weight": 400,
    "heading": {
      "family": "Rhithmic Sans",
      "source": "http://dashboard.hifi.com/fonts/rhithmic/RhithmicSans-Regular.woff2",
      "format": "woff2",
      "weight": 400
    },
    "body": {
      "family": "Inter",
      "source": "http://dashboard.hifi.com/fonts/inter/Inter-Regular.woff2",
      "format": "woff2",
      "weight": 400
    },
    "code": {
      "family": "Space Mono",
      "source": "http://dashboard.hifi.com/fonts/rhithmic/SpaceMono-Regular.woff2",
      "format": "woff2",
      "weight": 400
    }
  },
  "css": "/styles.css",
  "js": "/flowing-light.js",
  "favicon": "/favicon.svg",
  "seo": {
    "metatags": {
      "og:image": "/og.png"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "pages": [
          {
            "group": "Get started",
            "pages": [
              "docs/overview",
              "docs/quickstart",
              "docs/authentication",
              "docs/sandbox",
              "docs/postman"
            ]
          },
          {
            "group": "Core concepts",
            "pages": [
              "docs/users/index",
              "docs/wallets/index",
              "docs/transfers/onramps",
              "docs/transfers/offramps",
              {
                "group": "Onchain",
                "pages": [
                  "docs/transfers/wallet-transfers",
                  "docs/transfers/swaps",
                  "docs/transfers/bridging"
                ]
              },
              {
                "group": "Webhooks",
                "pages": [
                  "docs/webhooks/index",
                  "docs/webhooks/user",
                  "docs/webhooks/kyc",
                  "docs/webhooks/account",
                  "docs/webhooks/onramp",
                  "docs/webhooks/offramp",
                  "docs/webhooks/wallet"
                ]
              }
            ]
          },
          {
            "group": "Features",
            "pages": [
              "docs/features/kyc-link",
              "docs/features/virtual-accounts",
              "docs/features/batch-transfers",
              "docs/features/transfer-approvals",
              "docs/features/developer-fees",
              "docs/features/settlement-rules"
            ]
          },
          {
            "group": "Compliance",
            "pages": [
              "docs/compliance/currencies",
              "docs/compliance/rails",
              "docs/compliance/regions",
              "docs/compliance/industries",
              {
                "group": "Documents",
                "pages": [
                  "docs/compliance/documents/overview",
                  "docs/compliance/documents/identity",
                  "docs/compliance/documents/supported-identity-documents",
                  "docs/compliance/documents/proof-of-address"
                ]
              },
              {
                "group": "References",
                "pages": [
                  "docs/compliance/references/business-industries",
                  "docs/compliance/references/occupations",
                  "docs/compliance/references/account-purposes",
                  "docs/compliance/references/export-categories",
                  "docs/compliance/references/product-service-categories"
                ]
              }
            ]
          }
        ]
      },
      {
        "tab": "Postman",
        "href": "https://www.postman.com/hifi-developers/workspace/hifi-developers/collection/36482019-965415fa-8dd5-4d2c-a4ca-068478dce9d9?action=share&source=copy-link&creator=34328055"
      },
      {
        "tab": "API Reference",
        "openapi": "https://production.hifibridge.com/api/v2/openapi.json"
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.hifi.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/hifibridge",
      "github": "https://github.com/Hifi-Bridge",
      "linkedin": "https://www.linkedin.com/company/hifibridge"
    }
  }
}
