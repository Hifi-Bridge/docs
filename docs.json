{
  "$schema": "https://hifibridge.com/docs.json",
  "theme": "almond",
  "name": "HIFI Docs",
  "description": "Developer Documentation for HIFI",
  "colors": {
    "primary": "#33171E",
    "light": "#F2FF66",
    "dark": "#191314"
  },
  "fonts": {
    "family": "Rhithmic Sans",
    "source": "http://dashboard.hifibridge.com/fonts/rhithmic/RhithmicSans-Regular.woff2",
    "format": "woff2",
    "weight": 400,
    "heading": {
      "family": "Rhithmic Sans",
      "source": "http://dashboard.hifibridge.com/fonts/rhithmic/RhithmicSans-Regular.woff2",
      "format": "woff2",
      "weight": 400
    },
    "body": {
      "family": "Rhithmic Sans",
      "source": "http://dashboard.hifibridge.com/fonts/rhithmic/RhithmicSans-Regular.woff2",
      "format": "woff2",
      "weight": 400
    },
    "code": {
      "family": "Space Mono",
      "source": "http://dashboard.hifibridge.com/fonts/rhithmic/SpaceMono-Regular.woff2",
      "format": "woff2",
      "weight": 400
    }
  },
  "css": "/styles.css",
  "js": "/flowing-light.js",
  "favicon": "/favicon.svg",
  "seo": {
    "metatags": {
      "og:image": "/og.png"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "pages": [
          "docs/overview",
          "docs/currencies",
          "docs/regions",
          "docs/industries",
          {
            "group": "Models",
            "pages": [
              {
                "group": "Users",
                "pages": ["docs/users/index", "docs/users/kyc"]
              },
              {
                "group": "Wallets",
                "pages": [
                  "docs/wallets/index",
                  "docs/wallets/balances",
                  "docs/wallets/deposits"
                ]
              },
              {
                "group": "Fiat",
                "pages": ["docs/fiat/accounts", "docs/fiat/rails"]
              },
              {
                "group": "Transfers",
                "pages": [
                  "docs/transfers/index",
                  "docs/transfers/onramps",
                  "docs/transfers/swaps",
                  "docs/transfers/bridging",
                  "docs/transfers/offramps"
                ]
              }
            ]
          },
          {
            "group": "Features",
            "pages": [
              "docs/users/features/kyc-link",
              "docs/transfers/features/batch-transfers",
              "docs/transfers/features/virtual-accounts",
              "docs/transfers/features/settlement-rules",
              "docs/transfers/features/transfer-approvals"
            ]
          }
        ]
      },
      {
        "tab": "Guides",
        "pages": [
          "guides/quickstart",
          {
            "group": "Integration",
            "pages": [
              {
                "group": "API",
                "pages": [
                  "guides/integration/authentication",
                  "guides/integration/responses",
                  "guides/integration/errors"
                ]
              },
              {
                "group": "Dashboard",
                "pages": ["docs/dashboard/index", "docs/dashboard/roles"]
              },
              "docs/sandbox"
            ]
          },
          {
            "group": "Use Cases",
            "pages": [
              "guides/use-cases/stablecoin-access",
              "guides/use-cases/wallet-provisioning",
              "guides/use-cases/global-payments"
            ]
          },
          {
            "group": "Users",
            "pages": ["guides/users/create-user", "guides/users/submit-kyc"]
          },
          {
            "group": "Transfers",
            "pages": [
              {
                "group": "Wallets",
                "pages": ["guides/transfers/wallets/send-usdc"]
              },
              {
                "group": "Onramps",
                "pages": [
                  "guides/transfers/onramps/usd-usdc",
                  "guides/transfers/onramps/ngn-usdc"
                ]
              },
              {
                "group": "Offramps",
                "pages": [
                  "guides/transfers/offramps/usdc-usd",
                  "guides/transfers/offramps/usdc-mxn"
                ]
              },
              {
                "group": "Swaps",
                "pages": ["guides/transfers/swaps/usdc-usdt"]
              },
              {
                "group": "Bridges",
                "pages": ["guides/transfers/bridges/eth-sol"]
              }
            ]
          },
          {
            "group": "Features",
            "pages": [
              "guides/transfers/features/batch-transfers",
              "guides/transfers/features/virtual-accounts",
              "guides/transfers/features/settlement-rules",
              "guides/transfers/features/transfer-approvals"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "openapi": {
          "source": "/api/openapi.json",
          "directory": "api"
        }
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/hifibridge",
      "github": "https://github.com/Hifi-Bridge",
      "linkedin": "https://www.linkedin.com/company/hifibridge"
    }
  }
}
