{
  "$schema": "https://hifibridge.com/docs.json",
  "theme": "almond",
  "name": "HIFI Docs",
  "description": "Developer Documentation for HIFI",
  "colors": {
    "primary": "#33171E",
    "light": "#F2FF66",
    "dark": "#191314"
  },
  "fonts": {
    "family": "Rhithmic Sans",
    "source": "http://dashboard.hifibridge.com/fonts/rhithmic/RhithmicSans-Regular.woff2",
    "format": "woff2",
    "weight": 400,
    "heading": {
      "family": "Rhithmic Sans",
      "source": "http://dashboard.hifibridge.com/fonts/rhithmic/RhithmicSans-Regular.woff2",
      "format": "woff2",
      "weight": 400
    },
    "body": {
      "family": "Inter",
      "source": "http://dashboard.hifibridge.com/fonts/inter/Inter-Regular.woff2",
      "format": "woff2",
      "weight": 400
    },
    "code": {
      "family": "Space Mono",
      "source": "http://dashboard.hifibridge.com/fonts/rhithmic/SpaceMono-Regular.woff2",
      "format": "woff2",
      "weight": 400
    }
  },
  "css": "/styles.css",
  "js": "/flowing-light.js",
  "favicon": "/favicon.svg",
  "seo": {
    "metatags": {
      "og:image": "/og.png"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "pages": [
          {
            "group": "Platform",
            "pages": [
              "docs/overview",
              {
                "group": "Rails",
                "pages": [
                  "docs/rails/overview",
                  "docs/rails/usd-individual",
                  "docs/rails/usd-business",
                  "docs/rails/other-rails"
                ]
              },
              {
                "group": "Compliance",
                "pages": [
                  "docs/compliance/currencies",
                  "docs/compliance/regions",
                  "docs/compliance/industries",
                  {
                    "group": "Documents",
                    "pages": [
                      "docs/compliance/documents/overview",
                      "docs/compliance/documents/identity",
                      "docs/compliance/documents/supported-identity-documents",
                      "docs/compliance/documents/proof-of-address"
                    ]
                  },
                  {
                    "group": "References",
                    "pages": [
                      "docs/compliance/references/business-industries",
                      "docs/compliance/references/occupations",
                      "docs/compliance/references/account-purposes",
                      "docs/compliance/references/export-categories",
                      "docs/compliance/references/product-service-categories"
                    ]
                  }
                ]
              }
            ]
          },
          {
            "group": "Models",
            "pages": [
              {
                "group": "Users",
                "pages": ["docs/users/index", "docs/users/kyc"]
              },
              {
                "group": "Wallets",
                "pages": [
                  "docs/wallets/index",
                  "docs/wallets/balances",
                  "docs/wallets/deposits"
                ]
              },
              {
                "group": "Transfers",
                "pages": [
                  "docs/transfers/wallets",
                  "docs/transfers/onramps",
                  "docs/transfers/offramps",
                  "docs/transfers/swaps",
                  "docs/transfers/bridging"
                ]
              }
            ]
          },
          {
            "group": "Features",
            "pages": [
              "docs/users/features/kyc-link",
              "docs/transfers/features/batch-transfers",
              "docs/transfers/features/virtual-accounts",
              "docs/transfers/features/transfer-approvals",
              "docs/transfers/features/settlement-rules"
            ]
          }
        ]
      },
      {
        "tab": "Guides",
        "pages": [
          "guides/quickstart",
          {
            "group": "Integration",
            "pages": [
              {
                "group": "API",
                "pages": [
                  "docs/api/authentication",
                  "docs/api/postman",
                  "docs/api/errors",
                  "docs/api/responses"
                ]
              },
              {
                "group": "Dashboard",
                "pages": ["docs/dashboard/index", "docs/dashboard/roles"]
              },
              "docs/webhooks",
              "docs/sandbox"
            ]
          },
          {
            "group": "USD Rail",
            "pages": [
              "guides/usd-rail/overview",
              "guides/usd-rail/submit-kyc",
              "guides/usd-rail/submit-kyb"
            ]
          },
          {
            "group": "Use Cases",
            "pages": [
              "guides/use-cases/stablecoin-access",
              "guides/use-cases/wallet-provisioning",
              "guides/use-cases/global-payments"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "openapi": "https://production.hifibridge.com/api/v2/openapi.json"
      },
      {
        "tab": "Postman",
        "href": "https://www.postman.com/hifi-developers/workspace/hifi-developers/collection/36482019-965415fa-8dd5-4d2c-a4ca-068478dce9d9?action=share&source=copy-link&creator=34328055"
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.hifibridge.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/hifibridge",
      "github": "https://github.com/Hifi-Bridge",
      "linkedin": "https://www.linkedin.com/company/hifibridge"
    }
  }
}
